<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">#fff</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="myButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
